<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"

        android:paddingTop="@dimen/padding_top_bottom"
        android:paddingBottom="@dimen/padding_top_bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/room_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_room"
            android:layout_marginLeft="@dimen/image_padding"
            android:layout_marginTop="@dimen/padding_top_bottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

         <TextView
             android:id="@+id/room_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="H.1.1"
             android:textSize="@dimen/title_size"
             android:paddingLeft="@dimen/text_padding_left"
             android:paddingTop="@dimen/text_padding_top_bottom"
             android:paddingBottom="@dimen/text_padding_top_bottom"/>

        <TextView
            android:id="@+id/room_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:paddingRight="@dimen/image_padding"
            android:paddingTop="@dimen/text_padding_top_bottom"
            android:paddingBottom="@dimen/text_padding_top_bottom"
            android:text="- belegt -"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>